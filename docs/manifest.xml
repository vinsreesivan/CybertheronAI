<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp">

	<!-- Identity -->
	<Id>f3a7d9ee-5b2e-4c3a-9f0d-1c2e3b4a5d6e</Id>
	<Version>1.0.0.7</Version>
	<ProviderName>ESCORT AI</ProviderName>
	<DefaultLocale>en-US</DefaultLocale>
	<DisplayName DefaultValue="ESCORT AI Security Analytics"/>
	<Description DefaultValue="Auto-label + manual analysis."/>

	<!-- Icons (HTTPS) -->
	<IconUrl DefaultValue="https://raw.githubusercontent.com/vinsreesivan/CybertheronAI/main/docs/assets/icon-32.png"/>
	<HighResolutionIconUrl DefaultValue="https://raw.githubusercontent.com/vinsreesivan/CybertheronAI/main/docs/assets/icon-80.png"/>

	<!-- Host & permissions -->
	<Hosts>
		<Host Name="Mailbox"/>
	</Hosts>
	<Requirements>
		<Sets DefaultMinVersion="1.10">
			<Set Name="Mailbox"/>
		</Sets>
	</Requirements>
	<Permissions>ReadWriteItem</Permissions>

	<!-- Taskpane entry -->
	<FormSettings>
		<Form xsi:type="ItemRead">
			<DesktopSettings>
				<SourceLocation DefaultValue="https://raw.githubusercontent.com/vinsreesivan/CybertheronAI/main/docs/taskpane.html"/>
				<RequestedHeight>450</RequestedHeight>
			</DesktopSettings>
		</Form>
	</FormSettings>

	<!-- Auto-run on read -->
	<Rule xsi:type="RuleCollection" Mode="Or">
		<Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
	</Rule>

</OfficeApp>
